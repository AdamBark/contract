<?xml version="1.0"?>
<odoo>

    <record id="account_analytic_account_button_invoice" model="ir.ui.view">
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form" />
        <field name="arch" type="xml">
            <field name="recurring_next_date" position="after">
                <field name="automatic_invoice_validation"/>
                <field name="send_by_mail"
                       attrs="{'invisible': [('recurring_next_date', '!=', True)]}"/>
            </field>
        </field>
    </record>

</odoo>
